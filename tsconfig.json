{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["scripts/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
